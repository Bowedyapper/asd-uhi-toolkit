{
  "name": "uhi-asd-toolkit",
  "version": "1.0.0",
  "description": "A standalone tool for UHI Applied Software Development students to track their learning outcomes built in electron and svelte.",
  "main": "./out/main/index.js",
  "author": "Jason Hewitt",
  "license": "MIT",
  "scripts": {
    "format": "prettier --plugin prettier-plugin-svelte --write .",
    "lint": "eslint . --ext .js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "svelte-check": "svelte-check --tsconfig ./tsconfig.json",
    "typecheck": "npm run typecheck:node && npm run svelte-check",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:win": "npm run build && electron-builder --win --config",
    "build:mac": "npm run build && electron-builder --mac --config",
    "build:linux": "npm run build && electron-builder --linux --config"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^2.0.0",
    "@electron-toolkit/utils": "^2.0.0",
    "electron-updater": "^6.1.1",
    "gsap": "^3.12.2"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^1.0.1",
    "@electron-toolkit/eslint-config-ts": "^1.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@sveltejs/vite-plugin-svelte": "^2.4.5",
    "@types/git-url-parse": "^9.0.2",
    "@types/node": "^18.17.5",
    "@zerodevx/svelte-toast": "^0.9.5",
    "autoprefixer": "^10.4.16",
    "daisyui": "^3.9.4",
    "electron": "^25.6.0",
    "electron-builder": "^24.6.3",
    "electron-context-menu": "^3.6.1",
    "electron-log": "^5.0.0",
    "electron-store": "^8.1.0",
    "electron-vite": "^1.0.27",
    "eslint": "^8.47.0",
    "eslint-plugin-svelte": "^2.32.4",
    "git-url-parse": "^13.1.1",
    "moment": "^2.29.4",
    "postcss": "^8.4.31",
    "prettier": "^3.0.2",
    "prettier-plugin-svelte": "^3.0.3",
    "simple-git": "^3.20.0",
    "svelte": "^4.2.0",
    "svelte-check": "^3.5.0",
    "svelte-routing": "^2.6.0",
    "tailwindcss": "^3.3.5",
    "tslib": "^2.6.2",
    "typescript": "^5.1.6",
    "vite": "^4.4.9"
  }
}
